{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@core/*": [
        "./app/core/*"
      ],
      "@shared/*": [
        "./app/shared/*"
      ]
    },
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
